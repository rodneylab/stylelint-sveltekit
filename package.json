{
  "name": "stylelint-sveltekit",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "Stylelint for SvelteKit: keep you Svelte code consistent and make sure your CSS and SCSS code follows your team's style guide to the letter!",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "check": "svelte-check --fail-on-hints",
    "preview": "vite preview",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@fontsource/hind": "^4.5.10",
    "@fontsource/montserrat": "^4.5.14",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.7.2",
    "commitlint": "^17.4.4",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-scss": "^4.4.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "vite": "^4.1.3"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/stylelint-sveltekit"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/stylelint-sveltekit/issues"
  }
}
