{
  "name": "stylelint-sveltekit",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "Stylelint for SvelteKit: keep you Svelte code consistent and make sure your CSS and SCSS code follows your team's style guide to the letter!",
  "scripts": {
    "dev": "vite dev",
    "start": "vite dev",
    "build": "vite build",
    "check": "svelte-check",
    "preview": "vite preview",
    "lint": "prettier --ignore-path .gitignore --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "prettier:check": "prettier --check --plugin=prettier-plugin-svelte .",
    "format": "prettier --ignore-path .gitignore --write --plugin=prettier-plugin-svelte ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.3",
    "@fontsource/hind": "^5.0.8",
    "@fontsource/montserrat": "^5.0.15",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.27.6",
    "commitlint": "link:latest@commitlint/config-conventional@latest",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.3.1",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.1",
    "svelte-preprocess": "^5.1.1",
    "vite": "^5.0.2"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/stylelint-sveltekit"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/stylelint-sveltekit/issues"
  }
}
